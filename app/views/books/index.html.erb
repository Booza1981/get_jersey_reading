<div class="hero">
  <%= image_tag("jersey_festival_of_words.jpg") %>
</div>


<h1>Top Recommendations</h1>
  
<div class = "cover_thumb">
  <%= image_tag(@thumb, :alt => "#{@top.title} cover", :class => "cover-image") %>
</div>


<table>

  <thead>
    <tr>
      <th>Link</th>
      <th>ISBN</th>
      <th colspan="3"></th>
    </tr>
  </thead>








  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.link %></td>
        <td><%= book.isbn %></td>
        <td><%= link_to 'Show', book %></td>
        
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
