<div class="wrapper">
	<div class="page-header">
		<h1><%= @reading_list.title %></h1>

			<% if @reading_list.books.any? %>

				<% @reading_list.books.each do |book| %>

					<div class="book-container">
			                    <div class="book_cover">
			                        <%= link_to ( image_tag(book.image_link)), book_path(book) %>
			                    </div>
			         </div>
				<% end %>

				<% else %>
				<p>There are no books in this reading list.</p>
			<% end %>
	</div>
		
</div>



